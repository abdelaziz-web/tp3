pipeline {
    agent any 

    tools {
        jdk 'jdk17'
        maven 'maven'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
       
        stage('Build') {
            steps {
                bat 'mvn clean package'
            }
        }

        stage('Scan') {
            steps {
                withSonarQubeEnv('SonarQube') { // Correctly closes within this block
                    bat 'mvn clean verify sonar:sonar -Dsonar.projectKey=jenkins -Dsonar.projectName='jenkins'' // This is the standard command for SonarQube scanning with Maven
                }
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/TEST-*.xml'
                }
            }
        }
    }

    post {
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
